---
import { Icon } from "astro-icon";

/** 
	Uses https://github.com/natemoo-re/astro-icon#readme
	Find icons @ https://icones.js.org/
*/
const socialLinks = [
	{
		name: "mdi:github",
		friendlyName: "Github",
		link: "https://github.com/guilsa",
	},
	{
		name: "mdi:mastodon",
		friendlyName: "Mastodon",
		link: "https://mastodon.social/@urubuz",
	},
	{
		name: "mdi:linkedin",
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/guilhermeisa/",
	},
	{
		name: "mdi:rss",
		friendlyName: "RSS",
		link: "https://guilsa.com/rss.xml",
	},
	{
		name: "mdi:email",
		friendlyName: "email",
		link: "mailto:talktoguil@gmail.com",
	},
];
---

<div class="flex flex-wrap items-end gap-x-4">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ link, name, friendlyName }) => {
				const isEmail = name.includes("email") || friendlyName.toLowerCase().includes("email");
				return (
					<li class="flex">
						<a
							class="inline-block p-1 sm:hover:text-link"
							href={link}
							target="_blank"
							rel={`noopener noreferrer me ${isEmail ? "authn" : ""}`}
						>
							<Icon class="h-6 w-6" name={name} aria-hidden="true" focusable="false" />
							<span class="sr-only">{friendlyName}</span>
						</a>
					</li>
				);
			})
		}
	</ul>
</div>
<div class="flex flex-wrap items-end gap-x-4">
	<p>My CV</p>
	<p class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		<a class="inline-block p-1 sm:hover:text-link" href="./GuilSa-CV-2025.pdf" target="_blank">
			<Icon class="h-6 w-6" name="mdi:file-account" aria-hidden="true" focusable="false" />
		</a>
	</p>
</div>
